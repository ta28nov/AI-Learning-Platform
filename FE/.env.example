# Environment Variables cho AI Learning Platform

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=30000

# App Configuration
VITE_APP_NAME=AI Learning Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Nền tảng học tập AI thông minh

# Authentication
VITE_AUTH_TOKEN_KEY=access_token
VITE_AUTH_REFRESH_KEY=refresh_token

# Features Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_I18N=true
VITE_ENABLE_PWA=false

# Analytics (optional)
# VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# VITE_HOTJAR_ID=HOTJAR_SITE_ID

# External Services (optional)
# VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
# VITE_STRIPE_PUBLIC_KEY=pk_test_...

# Development
VITE_DEV_MODE=true
VITE_ENABLE_MOCK_API=false

# Logging
VITE_LOG_LEVEL=info